{% extends 'templetes/app.twig' %}

{% block content %}

<!-- ------------------------------------------------------------------------------------------------------------------------ -->
<!-- main body starts -->

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 col-xl-10 main-body" id="main-body">

    <!-- main content starts -->
    <!-- -------------------------------------------------------------------------------------------------------------------- -->

    <div class=" main-content">
        <div class=" row body-header clearfix">
            <div class="col-md-6 col-lg-4 col-xl-4">
                <h6 class="page-title">
                    Dashboard
                </h6>
            </div>
            <div class="bread col-md-6 col-lg-8 col-xl-8">
                <nav class="breadcrumb">
                    <span class="breadcrumb-item">Dashboard</span>
                    <span class="breadcrumb-item">Hotels</span>
                    <span class="breadcrumb-item">Add</span>
                </nav>
            </div>
        </div>


        <div class="clearfix"></div>
        <div class="card mt-3 mb-3">

            <div class="card-header">
                Add Hotels

            </div>
            <div class="card-body">
                <form action="{{ path_for('home.postHotel') }}" method="POST" enctype="multipart/form-data" class="form-horizantal"
                    id="cardaddform">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nameofhotel" class="form-label">Name of The Hotel</label>
                            <input type="text" name="nameofhotel" id="nameofhotel" class="form-control {{ errors.nameofhotel ? 'has-error' : ''}}"
                                value="{{ old.nameofhotel }}">
                            {% if errors.nameofhotel %}
                            <span class="text text-danger">{{ errors.nameofhotel | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-6">
                            <label for="address" class="form-label">Location of Hotel</label>
                            <input type="text" name="address" id="address" class="form-control {{ errors.address ? 'has-error' : ''}}"
                                value="{{ old.address }}">
                            {% if errors.address %}
                            <span class="text text-danger">{{ errors.address | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="district" class="form-label">District</label>
                            <input type="text" name="district" id="district" class="form-control {{ errors.district ? 'has-error' : ''}}"
                                value="{{ old.district }}">
                            {% if errors.district %}
                            <span class="text text-danger">{{ errors.district | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group col-md-6">
                            <label for="contact" class="form-label">Contact</label>
                            <input type="text" name="contact" id="contact" class="form-control {{ errors.contact ? 'has-error' : ''}}"
                                value="{{ old.contact }}">
                            {% if errors.contact %}
                            <span class="text text-danger">{{ errors.contact | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="image1" class="form-label">Images</label>
                            <input type="file" name="image1" id="image1" class="form-control" accept="image/*" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="image2" class="form-label">Images</label>
                            <input type="file" name="image2" id="image2" class="form-control" accept="image/*" required>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="services" class="form-label">Services </label>
                            <textarea name="services" id="services" rows="3" class="form-control {{ errors.services ? 'has-error' : ''}}">{{ old.services }}</textarea>
                            {% if errors.services %}
                            <span class="text text-danger">{{ errors.services | first }}</span>
                            {% endif %}

                        </div>
                        <div class="form-group col-md-6">
                            <label for="details" class="form-label">Details Of Place</label>
                            <textarea name="details" id="details" rows="3" class="form-control {{ errors.details ? 'has-error' : ''}}">{{ old.details }}</textarea>
                            {% if errors.details %}
                            <span class="text text-danger">{{ errors.details | first }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-row mx-auto w-25">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>

            </div>
        </div>


    </div>

    <!-- ------------------------------------------------------------------------------------------------------------------- -->
    <!-- main content ends -->
</div>
<!-- main body ends -->
<!-- ------------------------------------------------------------------------------------------------------------------------ -->

</div>
<!-- body parts ends -->
<!-- ------------------------------------------------------------------------------------------------------------------------ -->

{% endblock %}